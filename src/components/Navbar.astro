---
import '../styles/global.css';
---
<nav class="bg-white shadow-lg p-4">
  <div class="container mx-auto flex justify-between items-center">
    <!-- Logo y nombre -->
    <div class="flex items-center gap-2">
      <img src="/logo.png" alt="Logo Eventos El Cheffi" class="h-10 w-10 sm:h-12 sm:w-12 rounded-full border-2 border-purple-200" />
      <span class="font-bold text-lg sm:text-xl text-purple-600">Eventos<br class="sm:hidden"/>El Cheffi</span>
    </div>
    
    <!-- Menú hamburguesa para móvil -->
    <div class="md:hidden">
      <button id="mobile-menu-button" class="text-purple-600 focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Menú desktop -->
    <ul class="hidden md:flex gap-6">
      <li><a href="/" class="hover:text-purple-600 transition">Inicio</a></li>
      <li><a href="/nosotros" class="hover:text-purple-600 transition">Nosotros</a></li>
      <li><a href="/servicios" class="hover:text-purple-600 transition">Servicios</a></li>
      <li><a href="/precios" class="hover:text-purple-600 transition">Precios</a></li>
      <li><a href="/contacto" class="hover:text-purple-600 transition">Contacto</a></li>
    </ul>
  </div>
  
  <!-- Menú móvil -->
  <div id="mobile-menu" class="md:hidden hidden mt-4">
    <ul class="flex flex-col space-y-2 px-4 pb-4">
      <li><a href="/" class="block py-2 hover:text-purple-600 transition border-b border-gray-100">Inicio</a></li>
      <li><a href="/nosotros" class="block py-2 hover:text-purple-600 transition border-b border-gray-100">Nosotros</a></li>
      <li><a href="/servicios" class="block py-2 hover:text-purple-600 transition border-b border-gray-100">Servicios</a></li>
      <li><a href="/precios" class="block py-2 hover:text-purple-600 transition border-b border-gray-100">Precios</a></li>
      <li><a href="/contacto" class="block py-2 hover:text-purple-600 transition">Contacto</a></li>
    </ul>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
