---
import '../styles/global.css';
---
<footer class="bg-gray-900 text-white py-6 mt-12">

  <div class="container mx-auto px-4 flex flex-col items-center md:flex-row md:justify-between md:items-center">
    <div class="flex flex-col items-center gap-2 md:flex-row md:gap-6 mb-2 md:mb-0 w-full md:w-auto">
      <div class="flex gap-6 mb-2 md:mb-0">
        <a href="#" aria-label="Facebook">
          <img src="/facebook.svg" alt="Facebook" class="h-8 w-8 sm:h-6 sm:w-6 transition-transform duration-200 hover:scale-110" />
        </a>
        <a href="#" aria-label="Instagram">
          <img src="/instagram.svg" alt="Instagram" class="h-8 w-8 sm:h-6 sm:w-6 transition-transform duration-200 hover:scale-110" />
        </a>
        <a href="#" aria-label="TikTok">
          <img src="/tiktok.svg" alt="TikTok" class="h-8 w-8 sm:h-6 sm:w-6 transition-transform duration-200 hover:scale-110" />
        </a>
      </div>
      <span class="block text-sm md:text-base text-center md:text-right">By Team 3</span>
    </div>
  </div>
</footer>
